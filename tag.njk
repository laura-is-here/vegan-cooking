---
layout: "baseof.njk"
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tags/{{ tag }}/
title: "Post in {{ tag }} | Tiff & Laura's Favorite Recipes"
---

<div class="top-container bg-yellow-50">
  <div class="p-4 md:p-8 mb-8 w-full md:w-auto text-2xl">
    <h1 class="top-header">Tagged “{{ tag }}”</h1>

    {% set taglist = collections[ tag ] %}
    <ul class="flex flex-col flex-wrap md:h-48 markdown">
      {% for item in taglist | reverse %}
      <li class="md:pr-12 md:w-2/3">
        <a href="{{ item.url }}">
          {{ item.data.title }}
        </a>
      </li>
      {% endfor %}
    </ul>
  </div>
</div>
