---
layout: "baseof.njk"
---

<article>
  <header
    class="w-full bg-gradient-to-r from-gray-700 via-gray-800 to-gray-900 text-gray-200 py-4 md:p-8 flex flex-row flex-wrap justify-center items-center mb-12"
  >
    <div class="md:w-1/2 p-4">
      <h1 class="top-header">
        {{ title }}
      </h1>
      <p class="mb-2 text-xl">{{ summary }}</p>
      {% if source %}
      <a
        href="{{ source }}"
        rel="noopener noreferrer"
        target="_blank"
        class="italic text-sm border-b-2 inline-block mb-4"
        >Original Recipe</a
      >
      {% endif %}
    </div>
    {% if youtubeId %}
    <div class="md:w-1/2 p-4 mx-auto">
      <iframe
        class="w-3/4 mx-auto h-48"
        src="https://www.youtube.com/embed/{{ youtubeId }}"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
      ></iframe>
    </div>
    {% endif %}
  </header>
  <section class="top-container">
    <div class="flex flex-row flex-wrap items-start justify-center w-full">
      <ul class="list-none bg-gray-100 p-4 rounded-xl md:w-1/3 flex-grow">
        {% for item in ingredients %}
        <li class="mb-2">
          {{ item }}
        </li>
        {% endfor %}
      </ul>
      <section class="md:w-2/3 p-4 md:px-16 markdown">
        {{ content | safe }}
        {% if featureImg %}
        <img
          src="{{ featureImg }}"
          class="shadow rounded mb-6 h-64 w-full mx-auto object-cover"
        />
        {% endif %}
      </section>
    </div>
  </section>
</article>
