---
layout: "baseof.njk"
---

<article>
  <header
    class="p-4 mx-auto max-w-screen-lg flex flex-row flex-wrap justify-center items-center mb-12 bg-gray-800 text-gray-100 shadow border-l-4 border-green-200"
  >
    <div class="md:w-1/2 p-4">
      <h1 class="top-header">
        {{ title }}
      </h1>
      <p class="mb-2 text-xl">{{ summary }}</p>
      {% if source %}
      <a
        href="{{ source }}"
        rel="noopener noreferrer"
        target="_blank"
        class="italic text-sm border-b-2 inline-block mb-4"
        >Original Recipe</a
      >
      {% endif %}
    </div>
    {% if youtubeId %}
    <div class="md:w-1/2 mx-auto">
      <iframe
        class="mx-auto h-56"
        src="https://www.youtube.com/embed/{{ youtubeId }}"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
      ></iframe>
    </div>
    {% endif %}
  </header>
  <section class="top-container mb-8">
    <div class="flex flex-row flex-wrap items-start justify-around w-full">
      <ul
        class="p-8 md:p-16 md:w-1/3 bg-gray-800 shadow rounded-lg border-t-4 border-green-200"
      >
        {% for item in ingredients %}
        <li class="mb-4">
          {{ item }}
        </li>
        {% endfor %}
      </ul>
      <section class="md:w-2/3 p-4 md:p-16 max-w-screen-md markdown">
        {{ content | safe }}
        {% if featureImg %}
        <img
          src="{{ featureImg }}"
          class="shadow rounded mb-6 h-64 w-full mx-auto object-cover"
        />
        {% endif %}
      </section>
    </div>
  </section>
</article>
