---
layout: "baseof.njk"
---

<article>
  <header
    class="p-4 md:p-8 mx-auto max-w-screen-lg flex flex-row flex-wrap justify-center items-center mb-12 bg-gray-50"
  >
    <div class="md:w-1/2">
      <h1 class="top-header">
        {{ title }}
      </h1>
      <p class="mb-2 text-xl">{{ summary }}</p>
      {% if source %}
      <a
        href="{{ source }}"
        rel="noopener noreferrer"
        target="_blank"
        class="italic text-sm border-b-2 inline-block mb-4"
        >Original Recipe</a
      >
      {% endif %}
    </div>
    {% if youtubeId %}
    <div class="md:w-1/2 mx-auto">
      <iframe
        class="mx-auto h-56"
        src="https://www.youtube.com/embed/{{ youtubeId }}"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
      ></iframe>
    </div>
    {% endif %}
  </header>
  <section class="top-container mb-8">
    <div class="flex flex-row flex-wrap items-start justify-around w-full px-4">
      <div class="w-full md:w-1/3 mb-4">
        <h2 class="collapse text-2xl py-2 px-4 mb-2">
          <button
            class="flex flex-row justify-between items-center w-full"
            aria-expanded="true"
          >
            Ingredients
            <svg
              viewBox="0 0 10 10"
              aria-hidden="true"
              focusable="false"
              class="h-4 fill-current focus:outline-white"
            >
              <rect class="vert" height="8" width="2" y="1" x="4" />
              <rect height="2" width="8" y="4" x="1" />
            </svg>
          </button>
        </h2>
        <ul class="">
          {% for item in ingredients %}
          <li class="py-2 px-4">
            {{ item }}
          </li>
          {% endfor %}
        </ul>
      </div>
      <section class="md:w-2/3 p-4 md:p-16 max-w-screen-md markdown bg-gray-50">
        {{ content | safe }}
        {% if featureImg %}
        <img
          src="{{ featureImg }}"
          class="shadow rounded mb-6 h-64 w-full mx-auto object-cover"
        />
        {% endif %} {% if item.data.featureImgAttr %}
        <a
          rel="noopener noreferrer"
          target="_blank"
          class="italic border-b-2 border-gray-500 inline-block mr-2"
          href="{{ item.data.featureImgAttr }}"
          >Image Credit</a
        >
        {% endif %}
      </section>
    </div>
  </section>
</article>
