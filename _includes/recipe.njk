<article class="bg-orange-100 max-w-screen-md top-container p-2 md:p-8 m-4 md:mx-auto">
  <header class="mb-4 w-full flex flex-row flex-wrap">
    <div class="md:w-1/2 ">
      <h1 class="top-header">
        {{ title }}
      </h1>
      <p class="mb-2 text-xl">{{ summary }}</p>
      {% if source %}
      <a
        href="{{ source }}"
        rel="noopener noreferrer"
        target="_blank"
        class="italic text-sm inline-block mb-4"
        >Original Recipe</a
      >
      {% endif %}
    </div>
    {% if youtubeId %}
    <div class="md:w-1/2 ">
      <iframe
        class="h-56 mx-auto"
        src="https://www.youtube.com/embed/{{ youtubeId }}"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
      ></iframe>
    </div>
    {% endif %}
  </header>
