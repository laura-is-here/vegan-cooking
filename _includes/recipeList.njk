<article
  class="flex flex-col justify-around bg-gradient-to-r from-gray-700 via-gray-800 to-gray-900 text-gray-200 shadow h-56 rounded mb-6 group"
>
  <header class="px-4 py-2 text-right relative z-10">
    <h3 class="text-xl font-serif leading-none">
      <a href="{{ item.url }}">{{ item.data.title }}</a>
    </h3>
  </header>
  <section
    class="px-4 py-2 text-sm text-center bg-gray-700 bg-opacity-50 shadow relative z-10 font-bold"
  >
    <p class="">{{ item.data.summary }}</p>
  </section>
  <footer class="w-full py-2 px-4 self-end text-xs relative z-10">
    <ul class="flex flex-row flex-wrap">
      {% for tag in item.data.tags %} {% if tag != "recipe" %}
      <li class="pr-2 py-1 text-sm italic">
        <a href="/tags/{{ tag }}/">{{ tag }}</a>
      </li>
      {% endif %} {% endfor %}
    </ul>
    {% if item.data.source %}
    <a
      rel="noopener noreferrer"
      target="_blank"
      class="italic border-b-2"
      href="{{ item.data.source }}"
      >Original Recipe</a
    >
    {% endif %}
  </footer>
  {% if item.data.featureImg %}
  <div
    class="absolute inset-0 rounded md:p-2 opacity-30 group-hover:opacity-60 transition-opacity duration-500"
  >
    <img
      src="{{ item.data.featureImg }}"
      class="object-cover h-56 z-0 rounded w-full"
    />
  </div>
  {% endif %}
</article>
