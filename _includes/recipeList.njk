<article class="mb-6 group md:w-3/4">
  <header class="py-2 relative z-10">
    <h3 class="text-2xl font-serif leading-none bg-green-200">
      <a href="{{ item.url }}">{{ item.data.title }}</a>
    </h3>
  </header>
  <section class="py-2 text-xl relative z-10">
    <p class="">{{ item.data.summary }}</p>
  </section>
  <footer class="w-full py-2 self-end text-base relative z-10">
    <ul class="flex flex-row flex-wrap">
      {% for tag in item.data.tags %} {% if tag != "recipe" %}
      <li class="pr-2 py-1 italic">
        <a href="/tags/{{ tag }}/">{{ tag }}</a>
      </li>
      {% endif %} {% endfor %}
    </ul>
    {% if item.data.source %}
    <a
      rel="noopener noreferrer"
      target="_blank"
      class="italic border-b-2 inline-block mr-2"
      href="{{ item.data.source }}"
      >Original Recipe</a
    >
    {% endif %} {% if item.data.featureImgAttr %}
    <a
      rel="noopener noreferrer"
      target="_blank"
      class="italic border-b-2 inline-block mr-2"
      href="{{ item.data.featureImgAttr }}"
      >Image Credit</a
    >
    {% endif %}
  </footer>
</article>
