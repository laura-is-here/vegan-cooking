<article class="m-2 rounded bg-gray-50 text-gray-700 p-4 h-full">
  <h3
    class="text-center text-2xl font-bold font-serif leading-none mb-2 py-1 text-orange-700"
  >
    <a href="{{ item.url }}">{{ item.data.title }}</a>
  </h3>
  <p class="text-xl mb-2">{{ item.data.summary }}</p>
  <ul class="flex flex-row flex-wrap justify-center text-xl">
    {% for tag in item.data.tags %} {% if tag != "recipe" %}
    <li class="pr-2 py-1 italic text-orange-700">
      <a href="/tags/{{ tag }}/">{{ tag }}</a>
    </li>
    {% endif %} {% endfor %}
  </ul>
</article>
