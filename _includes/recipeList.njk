<article class="mb-6 group border-l-2 border-gray-800 md:w-3/4">
  <header class="px-4 py-2 relative z-10">
    <h3 class="text-xl font-serif leading-none">
      <a href="{{ item.url }}">{{ item.data.title }}</a>
    </h3>
  </header>
  <section class="px-4 py-2 text-base relative z-10">
    <p class="">{{ item.data.summary }}</p>
  </section>
  <footer class="w-full py-2 px-4 self-end text-xs relative z-10">
    <ul class="flex flex-row flex-wrap">
      {% for tag in item.data.tags %} {% if tag != "recipe" %}
      <li class="pr-2 py-1 text-sm italic">
        <a href="/tags/{{ tag }}/">{{ tag }}</a>
      </li>
      {% endif %} {% endfor %}
    </ul>
    {% if item.data.source %}
    <a
      rel="noopener noreferrer"
      target="_blank"
      class="italic border-b-2 inline-block mr-2"
      href="{{ item.data.source }}"
      >Original Recipe</a
    >
    {% endif %} {% if item.data.featureImgAttr %}
    <a
      rel="noopener noreferrer"
      target="_blank"
      class="italic border-b-2 inline-block mr-2"
      href="{{ item.data.featureImgAttr }}"
      >Image Credit</a
    >
    {% endif %}
  </footer>
</article>
