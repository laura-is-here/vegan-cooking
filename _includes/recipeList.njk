<article class="rounded border-2 border-gray-700 text-gray-700 p-4 h-full">
  <h3 class="text-2xl font-display leading-none mb-2 py-1">
    <a href="{{ item.url }}">{{ item.data.title }}</a>
  </h3>
  <p class="mb-2">{{ item.data.summary }}</p>
  <ul class="flex flex-row flex-wrap">
    {% for tag in item.data.tags %} {% if tag != "recipe" %}
    <li class="pr-2 py-1 text-base italic text-orange-700">
      <a href="/tags/{{ tag }}/">{{ tag }}</a>
    </li>
    {% endif %} {% endfor %}
  </ul>
</article>
